<%= turbo_frame_tag "#{dom_id(contestant)}_votes" do %>
  <% if vote = contestant.my_vote %>
    <%= button_to round_contestant_vote_path(@round, contestant, vote), method: :delete do %>
      <%= contestant.name %> <%= image_tag "full-heart.svg", size: "18x18", class: "inline" %>
    <% end %>
  <% else %>
    <%= button_to round_contestant_votes_path(@round, contestant) do %>
      <%= contestant.name %> <%= image_tag "empty-heart.svg", size: "18x18", class: "inline" %>
    <% end %>
  <% end %>
<% end %>
