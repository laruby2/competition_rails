<h2 class="text-3xl font-bold underline">Sign In</h2>

<%= form_with(url: session_path) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username, autofocus: true, required: true %>

  <%= f.label :password %>
  <%= f.password_field :password, required: true %>

  <%= f.submit "Sign In" %>
<% end %>
